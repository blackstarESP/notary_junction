<div class="container pt-5 pb-5">
  <h1 class="mt-5 mb-5 pt-5">Subscribe to the <%= @plan.titleize %> Plan</h1>
  <%= form_tag subscriptions_path, id: "payment-form" do %>
  <div class="field">
    <label for="card-element" class="label">Enter credit or debit card</label>
    <div id="card-element">
      
    </div>
    <div id="card-errors" role="alert"></div>
    <%= hidden_field_tag :plan_id, @plan_id %>
    <button class="button">Submit</button>
  </div>
  <% end %>
</div>